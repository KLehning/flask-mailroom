{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation from an existing donor{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Donor name:</label><input id="name-input" type="text" name="name">
    <label for="donation-input">Donation amount:</label><input id="donation-input" type="amount" name="donation">
    <input type="submit" value="Create Donation">
    {% if error %}<p>{{ error }}</p>{% endif %}
</form>
{% endblock content %}